    <select id="findContactPhones" resultMap="AllColumnMap">
        select
            sd.label as relation,
            a.name,
            dt.label as type,
            a.phone,
            a.remark
        from wsxd_contact_phone a
        join wsxd_case b
        on a.customer_id_no = b.customer_id_no
        LEFT JOIN sys_dict sd
        ON a.relation=sd.`value`
        AND sd.type="relationship"
        LEFT JOIN sys_dict dt
        ON a.type=dt.`value`
        AND dt.type="phone_type"
        where b.loan_bill_no = #{loanBillNo}
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY a.update_date DESC
            </otherwise>
        </choose>
    </select>
